<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StockFlow | Categories</title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <header class="navbar">
      <div class="logo new-container">
        <h1><%= user ? `${user.username}` : '' %> ğŸ“¦</h1>
        <form action="/logout" method="POST">
          <button type="submit" class="logout-btn">Log out</button>
        </form>
      </div>
      <nav class="nav-links">
        <a href="/categories">
          <span class="text">Categories</span>
          <span class="icon">ğŸ“‹</span>
        </a>
        <a href="/items">
          <span class="text">Items</span>
          <span class="icon">ğŸ› ï¸</span>
        </a>
        <a href="/suppliers">
          <span class="text">Suppliers</span>
          <span class="icon">ğŸ­</span>
        </a>
      </nav>
    </header>

    <main class="content">
      <div class="title-container">
        <div class="new-container">
          <h2>Categories</h2>
          <span class="icon">ğŸ“‹</span>
          <a href="/categories/new" class="btn new-btn">+</a>
        </div>
        <div class="search-container">
          <form action="/categories/search" method="GET" class="search-form">
            <input
              type="text"
              id="search"
              name="search"
              placeholder="Search by name"
              class="search-input"
            />
            <button type="submit" class="btn search-btn">ğŸ”</button>
          </form>
        </div>
      </div>

      <% if (message && message.length > 0) { %>
      <div class="message">
        <p><%= message %></p>
      </div>
      <% } %>

      <div class="cards-container">
        <% categories.forEach(category => { %>
        <div class="card">
          <h3><%= category.name %></h3>
          <p><%= category.description %></p>
          <div class="card-buttons">
            <a
              href="/categories/<%= category.id %>/update"
              class="btn update-btn"
              >Update</a
            >
            <form
              action="/categories/<%= category.id %>/delete"
              method="POST"
              onsubmit="return confirm('Are you sure you want to delete this category?');"
            >
              <button type="submit" class="btn delete-btn">ğŸ—‘ï¸</button>
            </form>
          </div>
        </div>
        <% }); %>
      </div>

      <div class="pagination">
        <% if (page > 1) { %>
        <a
          href="/categories/search?search=<%= searchTerm %>&page=<%= page - 1 %>&limit=3"
          class="btn"
          >Previous</a
        >
        <% } %> <% if (page < totalPages) { %>
        <a
          href="/categories/search?search=<%= searchTerm %>&page=<%= page + 1 %>&limit=3"
          class="btn"
          >Next</a
        >
        <% } %>
      </div>
    </main>

    <footer>
      <p>&copy; 2025 StockFlow. All Rights Reserved.</p>
    </footer>
  </body>
</html>
