<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StockFlow | Categories</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <header class="navbar">
      <div class="logo">
        <h1>
          <a href="/home" style="color: inherit; text-decoration: none"
            >StockFlow 📦</a
          >
        </h1>
      </div>
      <nav class="nav-links">
        <a href="/categories">
          <span class="text">Categories</span>
          <span class="icon">📋</span>
        </a>
        <a href="/items">
          <span class="text">Items</span>
          <span class="icon">🛠️</span>
        </a>
        <a href="/suppliers">
          <span class="text">Suppliers</span>
          <span class="icon">🏭</span>
        </a>
      </nav>
    </header>

    <main class="content">
      <div class="title-container">
        <div class="new-container">
          <h2>Categories</h2>
          <span class="icon">📋</span>
          <a href="/categories/new" class="btn new-btn">+</a>
        </div>
        <div class="search-container">
          <form action="/categories/search" method="GET" class="search-form">
            <input
              type="text"
              id="search"
              name="search"
              placeholder="Search by name"
              class="search-input"
            />
            <button type="submit" class="btn search-btn">🔍</button>
          </form>
        </div>
      </div>
      <div class="cards-container">
        <% categories.forEach(category => { %>
        <div class="card">
          <h3><%= category.name %></h3>
          <p><%= category.description %></p>
          <div class="card-buttons">
            <a
              href="/categories/<%= category.id %>/update"
              class="btn update-btn"
              >Update</a
            >
            <a
              href="/categories/<%= category.id %>/delete"
              class="btn delete-btn"
              >🗑️</a
            >
          </div>
        </div>
        <% }); %>
      </div>
    </main>

    <footer>
      <p>&copy; 2025 StockFlow. All Rights Reserved.</p>
    </footer>
  </body>
</html>
