<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SteelHub - Categories</title>
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <header class="navbar">
      <div class="logo">
        <h1><a href="/home" style="color: inherit; text-decoration: none;">SteelHub</a></h1>
      </div>
      <nav class="nav-links">
        <a href="/categories">Categories ðŸ’»</a>
        <a href="/categories/items">Items ðŸ“¦</a>
        <a href="/suppliers">Suppliers ðŸ”§</a>
      </nav>
    </header>

    <main class="content">
      <h2>Categories</h2>
      <div class="cards-container">
        <% categories.forEach(category => { %>
        <div class="card">
          <h3><%= category.name %></h3>
          <p><%= category.description %></p>
          <div class="card-buttons">
            <a
              href="/categories/<%= category.id %>/update"
              class="btn update-btn"
              >Update</a
            >
            <a
              href="/categories/<%= category.id %>/delete"
              class="btn delete-btn"
              >Delete</a
            >
          </div>
        </div>
        <% }); %>
      </div>
    </main>

    <footer>
      <p>&copy; 2025 SteelHub. All Rights Reserved.</p>
    </footer>
  </body>
</html>
