<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StockFlow | Items</title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  </head>
  <body>
    <header class="navbar">
      <div class="logo">
        <h1>
          <a href="/home" style="color: inherit; text-decoration: none"
            >StockFlow 📦</a
          >
        </h1>
      </div>
      <nav class="nav-links">
        <a href="/categories">
          <span class="text">Categories</span>
          <span class="icon">📋</span>
        </a>
        <a href="/items">
          <span class="text">Items</span>
          <span class="icon">🛠️</span>
        </a>
        <a href="/suppliers">
          <span class="text">Suppliers</span>
          <span class="icon">🏭</span>
        </a>
      </nav>
    </header>

    <main class="content">
      <div class="title-container">
        <div class="new-container">
          <h2>Items</h2>
          <span class="icon">🛠️</span>
          <a href="/items/new" class="btn new-btn">+</a>
        </div>
        <div class="search-container">
          <form action="/items/search" method="GET" class="search-form">
            <input
              type="text"
              id="search"
              name="search"
              placeholder="Search by name"
              class="search-input"
            />
            <button type="submit" class="btn search-btn">🔍</button>
          </form>
        </div>
      </div>

      <% if (message && message.length > 0) { %>
      <div class="message">
        <p><%= message %></p>
      </div>
      <% } %>

      <div class="cards-container">
        <% items.forEach(item => { %>
        <div class="card">
          <h3><%= item.name %></h3>
          <p>
            Category: <%= categories.find(category => category.id ===
            item.category_id).name %>
          </p>
          <p>Price: $<%= item.price %></p>
          <p>Quantity: <%= item.quantity %></p>
          <p>
            Supplier: <%= suppliers.find(supplier => supplier.id ===
            item.supplier_id).name %>
          </p>
          <p class="timestamp">
            Updated: <% if (item.updated_at && item.updated_at !==
            item.created_at) { %> <%= new Date(item.updated_at).toLocaleString()
            %> <% } else { %> <%= new Date(item.created_at).toLocaleString() %>
            <% } %>
          </p>
          <div class="card-buttons">
            <a href="/items/<%= item.id %>/update" class="btn update-btn"
              >Update</a
            >
            <a href="/items/<%= item.id %>/delete" class="btn delete-btn">🗑️</a>
          </div>
        </div>
        <% }); %>
      </div>
    </main>

    <footer>
      <p>&copy; 2025 StockFlow. All Rights Reserved.</p>
    </footer>
  </body>
</html>
