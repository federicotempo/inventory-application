<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StockFlow | Suppliers</title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <header class="navbar">
      <div class="logo">
        <h1>
          <a href="/home" style="color: inherit; text-decoration: none"
            ><%= user ? `${user.username}` : '' %> 📦</a
          >
        </h1>
      </div>
      <nav class="nav-links">
        <a href="/categories">
          <span class="text">Categories</span>
          <span class="icon">📋</span>
        </a>
        <a href="/items">
          <span class="text">Items</span>
          <span class="icon">🛠️</span>
        </a>
        <a href="/suppliers">
          <span class="text">Suppliers</span>
          <span class="icon">🏭</span>
        </a>
      </nav>
    </header>

    <main class="content">
      <div class="title-container">
        <div class="new-container">
          <h2>Suppliers</h2>
          <span class="icon">🏭</span>
          <a href="/suppliers/new" class="btn new-btn">+</a>
        </div>
        <div class="search-container">
          <form action="/suppliers/search" method="GET" class="search-form">
            <input
              type="text"
              id="search"
              name="search"
              placeholder="Search by name"
              class="search-input"
            />
            <button type="submit" class="btn search-btn">🔍</button>
          </form>
        </div>
      </div>

      <% if (message && message.length > 0) { %>
      <div class="message">
        <p><%= message %></p>
      </div>
      <% } %>

      <div class="cards-container">
        <% suppliers.forEach(supplier => { %>
        <div class="card">
          <h3><%= supplier.name %></h3>
          <p>Contact: <%= supplier.contact_phone %></p>
          <p>Email: <%= supplier.contact_email %></p>
          <div class="card-buttons">
            <a
              href="/suppliers/<%= supplier.id %>/update"
              class="btn update-btn"
              >Update</a
            >
            <form
              action="/suppliers/<%= supplier.id %>/delete"
              method="POST"
              onsubmit="return confirm('Are you sure you want to delete this supplier?');"
            >
              <button type="submit" class="btn delete-btn">🗑️</button>
            </form>
          </div>
        </div>
        <% }); %>
      </div>

      <div class="pagination">
        <% if (page > 1) { %>
        <a
          href="/suppliers/search?search=<%= searchTerm %>&page=<%= page - 1 %>&limit=3"
          class="btn"
          >Previous</a
        >
        <% } %> <% if (page < totalPages) { %>
        <a
          href="/suppliers/search?search=<%= searchTerm %>&page=<%= page + 1 %>&limit=3"
          class="btn"
          >Next</a
        >
        <% } %>
      </div>

    </main>
    <footer>
      <p>&copy; 2025 StockFlow. All Rights Reserved.</p>
    </footer>
  </body>
</html>
